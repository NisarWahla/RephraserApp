<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <ImageView
            android:id="@+id/fileTypeIcon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ruTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/sofia_pro_semi_bold_az"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="@string/title"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintStart_toEndOf="@+id/fileTypeIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ruDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/sofia_pro_medium_az"
            android:maxLines="2"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="@string/title"
            android:textColor="@color/gray"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ruTitle" />

        <TextView
            android:id="@+id/ruTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/sofia_pro_medium_az"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toEndOf="@+id/fileTypeIcon"
            app:layout_constraintTop_toBottomOf="@id/ruTitle" />

        <TextView
            android:id="@+id/ruDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/sofia_pro_semi_bold_az"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/ruTime"
            app:layout_constraintTop_toBottomOf="@id/ruDesc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>